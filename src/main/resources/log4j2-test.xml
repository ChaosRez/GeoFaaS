<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%-15t] %-5level %-30c{2} - %msg%n}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="de.hasenburg.geofencebroker.communication.ZMQProcessManager" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.hasenburg.geofencebroker.communication.ZMQControlUtility" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.hasenburg.geofencebroker.communication.ZMQProcess_Broker" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.hasenburg.geofencebroker.communication.ZMQProcess_MessageProcessor" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.hasenburg.geofencebroker.communication.ZMQCommunicator" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.hasenburg.geofencebroker.main.LoadTest" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.hasenburg.geofencebroker.communication.ZMQProcess_SimpleClient" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.hasenburg.geofencebroker.model.clients" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>